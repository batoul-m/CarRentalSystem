@model IEnumerable<CarRentalSystem.Models.Car>

<h2>Available Cars</h2>

<form asp-action="Index" method="get" class="mb-4">
    <div class="form-group">
        <input type="text" name="search" class="form-control" placeholder="Search cars by model or location..." />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<div class="row">
    @if(Model != null && Model.Any())
    {
        @foreach (var car in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@car.Make @car.Model (@car.Year)</h5>
                        <p class="card-text">Price per day: @car.PricePerDay</p>
                        <a href="#" class="btn btn-success">Book Now</a>
                    </div>
                </div>
            </div>
        }
    }
    else 
    {
        <p>No car details available.</p>   
    }
</div>
